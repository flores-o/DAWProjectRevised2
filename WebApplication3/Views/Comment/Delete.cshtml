@model WebApplication3.Models.Comment

@{
                /**/

                ViewBag.Title = "Delete";
}


<section class="pt-4 pb-5 section-top">
    <br>
</section>

<main id="main">
    <section id="tasks" class="section-with-bg wow fadeInUp">
        <div class="container">

            <h2>Delete comment</h2>

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                       Task
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Assignment.Name)
                    </dd>

                    <dt>
                        Author
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Author.Name)
                    </dd>

                    <dt>
                        Comment
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Text)
                    </dd>

                </dl>

                @using (Html.BeginForm())
