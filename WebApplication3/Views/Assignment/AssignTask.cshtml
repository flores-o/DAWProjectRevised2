
@{
    ViewBag.Title = "AssignTask";
}


<section class="pt-4 pb-5 section-top">
    <br>
</section>
<main id="main">

    <section id="buy-tickets" class="section-with-bg wow fadeInUp">
        <div class="container">

            <h2>AssignTask for task @ViewBag.TaskName</h2>


            <form method="post" action="/Assignment/AssignTask/@ViewBag.AssignmentId">
                @Html.HttpMethodOverride(HttpVerbs.Put)

                <input type="hidden" name="assignmentId" value=@ViewBag.AssignmentId />
                <div class="form-group">
                    <label for="userId">Select user</label>
                    <select id="userId" name="userId" class="form-control">
                        <option value="">-- Select User --</option>

                        @foreach (var user in ViewBag.Users)
                        {
                            <option value=@user.Id> @user.Name (@user.Email)</option>
                        }
                    </select>
                </div>
                <input type="submit" value="Add" class="btn btn-default" />

            </form>
        </div>
</section>
</main>